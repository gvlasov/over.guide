{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)": "<rootDir>/src/$1",
    "^data/(.*)": "<rootDir>/src/data/$1",
    "^@fixtures/(.*)": "<rootDir>/src/database/fixtures/$1"
  }
}
