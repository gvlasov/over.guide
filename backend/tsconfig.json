{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "@fixtures/*": [
        "src/database/fixtures/*"
      ],
      "data/*": [
        "src/data/*"
      ]
    },
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
