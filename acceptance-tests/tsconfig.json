{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "data/*": [
        "../backend/src/data/*"
      ]
    },
    "lib": [
      "esnext"
    ],
    "types": [
      "node",
      "./steps"
    ]
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
